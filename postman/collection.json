              "listen": "test",
              "script": {
                "exec": [
                  "(() => {\r",
                  "  pm.test(\"Status 200\", () => pm.response.to.have.status(200));\r",
                  "  pm.test(\"Response is JSON\", () => pm.response.to.be.json);\r",
                  "\r",
                  "  const data = pm.response.json();\r",
                  "\r",
                  "  function sum(nums) { return nums.reduce((a, b) => a + b, 0); }\r",
                  "\r",
                  "  pm.test(\"Has carts array + pagination\", () => {\r",
                  "    pm.expect(data).to.have.property(\"carts\");\r",
                  "    pm.expect(data.carts).to.be.an(\"array\");\r",
                  "    pm.expect(data).to.have.property(\"total\");\r",
                  "    pm.expect(data).to.have.property(\"skip\");\r",
                  "    pm.expect(data).to.have.property(\"limit\");\r",
                  "  });\r",
                  "\r",
                  "  pm.test(\"Each cart is internally consistent (totals & quantities)\", () => {\r",
                  "    data.carts.forEach(cart => {\r",
                  "      pm.expect(cart.products).to.be.an(\"array\");\r",
                  "\r",
                  "      // totalProducts == number of line items\r",
                  "      pm.expect(cart.totalProducts).to.equal(cart.products.length);\r",
                  "\r",
                  "      // totalQuantity == sum of item quantities\r",
                  "      pm.expect(cart.totalQuantity).to.equal(sum(cart.products.map(p => p.quantity)));\r",
                  "\r",
                  "      // cart totals match sums of items\r",
                  "      const itemsTotal = sum(cart.products.map(p => p.total));\r",
                  "      const itemsDiscounted = sum(cart.products.map(p => p.discountedTotal));\r",
                  "\r",
                  "      pm.expect(cart.total).to.be.closeTo(itemsTotal, 0.01);\r",
                  "      pm.expect(cart.discountedTotal).to.be.closeTo(itemsDiscounted, 0.01);\r",
                  "      pm.expect(cart.discountedTotal).to.be.at.most(cart.total);\r",
                  "    });\r",
                  "  });\r",
                  "\r",
                  "  // Set variables for next requests\r",
                  "  if (data.carts?.length) {\r",
                  "    const c = data.carts[0];\r",
                  "    const firstItem = c.products?.[0];\r",
                  "\r",
                  "    try { pm.collectionVariables.set(\"cartId\", c.id); } catch (e) {}\r",
                  "    try { pm.collectionVariables.set(\"userId\", c.userId); } catch (e) {}\r",
                  "    if (firstItem) {\r",
                  "      try { pm.collectionVariables.set(\"cartProductId\", firstItem.id); } catch (e) {}\r",
                  "    }\r",
                  "\r",
                  "    try { pm.environment.set(\"cartId\", c.id); } catch (e) {}\r",
                  "    try { pm.environment.set(\"userId\", c.userId); } catch (e) {}\r",
                  "    if (firstItem) {\r",
                  "      try { pm.environment.set(\"cartProductId\", firstItem.id); } catch (e) {}\r",
                  "    }\r",
                  "  }\r",
                  "})();\r",
                  ""
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
