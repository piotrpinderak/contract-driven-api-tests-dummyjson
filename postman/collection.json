                  "    });\r",
                  "  });\r",
                  "\r",
                  "  // Set productId for next requests\r",
                  "  if (data.products?.length) {\r",
                  "    const pid = data.products[0].id;\r",
                  "    try { pm.collectionVariables.set(\"productId\", pid); } catch (e) {}\r",
                  "    try { pm.environment.set(\"productId\", pid); } catch (e) {}\r",
                  "  }\r",
                  "})();\r",
