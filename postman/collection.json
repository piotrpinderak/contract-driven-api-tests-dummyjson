                  "\r",
                  "    pm.expect(data).to.have.property(\"total\");\r",
                  "    pm.expect(data).to.have.property(\"skip\");\r",
                  "    pm.expect(data).to.have.property(\"limit\");\r",
                  "  });\r",
                  "\r",
                  "  pm.test(\"Products length <= limit\", () => {\r",
                  "    pm.expect(data.products.length).to.be.at.most(Number(data.limit));\r",
                  "  });\r",
                  "\r",
                  "  pm.test(\"Product IDs are unique within the page\", () => {\r",
                  "    const ids = data.products.map(p => p.id);\r",
                  "    const unique = new Set(ids);\r",
                  "    pm.expect(unique.size).to.equal(ids.length);\r",
                  "  });\r",
                  "\r",
                  "  pm.test(\"Each product has sane core fields (invariants)\", () => {\r",
                  "    data.products.forEach(p => {\r",
                  "      pm.expect(p.id).to.be.a(\"number\");\r",
